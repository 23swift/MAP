            @Html.LabelFor(model => model.BookMark, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BookMark, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BookMark, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.WithRequirements, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.WithRequirements, new { @disabled="disabled" })
                    @Html.ValidationMessageFor(model => model.WithRequirements, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

