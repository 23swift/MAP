            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WorkflowInstanceId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.WorkflowInstanceId)
            </div>
        </div>

